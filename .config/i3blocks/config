# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

[volume]
label=VOL
instance=Master
interval=1
signal=10

[temperature]
label=TEMP
interval=10

[memory]
label=MEM
separator=false
interval=30

[cpu_usage]
label=CPU
interval=10
min_width=CPU: 100.00%
#separator=false


